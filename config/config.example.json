{
  "app": {
    "name": "goscratch",
    "env": "development"
  },
  "server": {
    "host": "0.0.0.0",
    "port": 3000,
    "read_timeout": 10,
    "write_timeout": 10,
    "idle_timeout": 120
  },
  "database": {
    "host": "localhost",
    "port": 5432,
    "user": "postgres",
    "password": "postgres",
    "name": "goscratch",
    "ssl_mode": "disable",
    "max_open_conns": 25,
    "max_idle_conns": 5,
    "conn_max_lifetime": 300
  },
  "jwt": {
    "secret": "your-super-secret-key-change-in-production",
    "access_token_ttl": 15,
    "refresh_token_ttl": 10080
  },
  "redis": {
    "enabled": false,
    "host": "localhost",
    "port": 6379,
    "password": "",
    "db": 0
  },
  "rabbitmq": {
    "enabled": false,
    "url": "amqp://guest:guest@localhost:5672/"
  },
  "storage": {
    "mode": "local",
    "local": {
      "base_path": "./uploads"
    },
    "s3": {
      "endpoint": "",
      "bucket": "",
      "region": "",
      "access_key": "",
      "secret_key": ""
    }
  },
  "sse": {
    "enabled": false
  },
  "audit": {
    "enabled": false
  },
  "authorization": {
    "enabled": true
  },
  "observability": {
    "metrics": {
      "enabled": true,
      "port": 9090
    },
    "tracing": {
      "enabled": false,
      "endpoint": "http://localhost:4317"
    }
  }
}